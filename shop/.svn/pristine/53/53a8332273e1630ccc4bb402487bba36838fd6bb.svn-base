class UsersController extends Controller
{
     public function index(){
         //接收数据
         $search='';
         if(!empty($_REQUEST['realname'])){
             $search.=" realname like '%{$_REQUEST['realname']}%'";
         }
         unset($_REQUEST['page']);
         $page=$_GET['page']??1;
         //处理数据
         $url_name=http_build_query($_REQUEST);
         $user=new UsersModel();
         $rows=$user->getAll($search,$page);
         $rows['url_name']=$url_name;
         //var_dump($rows);die;
         $this->assign($rows);
         //显示页面
         $this->display('index');
     }
     public function delete(){
         //接收数据
         $id=$_GET['user_id'];
         //处理数据
         $user=new UsersModel();
         $user->delete($id);
         //显示页面
         $this->red('index.php?p=Admin&c=Users&a=index');
     }
     public function edit(){
      if($_SERVER['REQUEST_METHOD']=='POST'){
          $data=$_POST;
          //上传图片
          $file=$_FILES['logo'];
          if($file['error'] !=4){
              $upload=new UploadTool();
              $rs=$upload->upload($file,"Users/");
              if($rs===false){
                  $this->red("index.php?p=Admin&c=Users&a=edit&user_id={$data['user_id']}");
              }
              //制作缩略图
              $data['photo']=$rs;
              $image=new ImageTool();
              $r=$image->thmub($rs,100,100);
              if($r===false){
                  $this->red("index.php?p=Admin&c=Users&a=edit&user_id={$data['user_id']}");
              }
              $data['thumb']=$r;
          }
          $user=new UsersModel();
          $user->editSave($data);
          //显示页面
          $this->red("index.php?p=Admin&c=Users&a=index");

      }else{
          //接收数据
          $id=$_GET['user_id'];
          //处理数据
          $user=new UsersModel();
          $row=$user->getOne($id);
          //显示页面
          $this->assign($row);
          $this->display('edit');
      }
}
     //抢去代金卷
     public function codes(){
         //接收数据
        $user_id=$_GET['user_id'];
        //处理数据
        $codes=new UsersModel();
        $codes->codes($user_id);
        //显示页面
        self::red('index.php?p=Admin&c=Users&a=index');
    }
     //充值
     public function add(){
         if($_SERVER['REQUEST_METHOD']=='POST'){
             //接收数据
             $data=$_POST;
             $user=new UsersModel();
             $mon=$user->money($data['user_id']);
             $zeng=new ZengModel();
             $val=$zeng->getAll();

             //处理数据
             $add_save=new UsersModel();
             $rs=$add_save->user_save($data,$mon,$val);
             //显示页面
             if($rs===false){
                 self::red('index.php?p=Admin&c=Users&a=add',$add_save->getError(),3);
             }
             $hist=new UsersModel();
             $money=$hist->hist1($data['user_id']);
             $history=new UsersModel();
             $history->history($data,$money);
             self::red('index.php?p=Admin&c=Users&a=index');
         }else{
             //接收数据
             //处理数据
             $add=new UsersModel();
             $rows=$add->user();
             //分配数据
             $this->assign('rows',$rows);
             //显示页面
             $this->display('add');
         }
     }
     //消费
     public function history(){
         if($_SERVER['REQUEST_METHOD']=='POST'){
            //接收数据
             $data=$_POST;
             //处理数据
//             查询是否是vip
             $vip=new UsersModel();
             $vip1=$vip->vip($data['user_id']);
             if($vip1!=0){
                 $data['money']=$data['money']/2;
             }
             $hist=new UsersModel();
             $money=$hist->hist1($data['user_id']);
             $his=new UsersModel();
             $rs=$his->his($data,$money);
            //显示页面
             if($rs===false){
                 self::red('index.php?p=Admin&c=Users&a=history&user_id='.$data['user_id'],$his->getError(),3);
             }
             //修改金额
             $user_money=new UsersModel();
             $user_money->user_money($data['user_id'],$money,$data['money']);
             self::red('index.php?p=Admin&c=Users&a=index');
         }else{
             //接收数据
             $user_id=$_GET['user_id'];
             //处理数据
             $group=new UsersModel();
             $rows=$group->group();
             foreach ($rows as $key=>&$row){
                 $row['user_id']=$user_id;
             }
//             var_dump($rows);die;
             //分配数据
             $this->assign('rows',$rows);
             $member=new UsersModel();
             $me=$member->member();
             $this->assign('me',$me);
             //显示页面
             $this->display('history');
         }
     }
}